CREATE TABLE Department(
    department_name int PRIMARY KEY,
    buildingNr int
);

CREATE TABLE Works(
    start_date date
);

CREATE TABLE Employee(
    ID int PRIMARY KEY, 
    phoneNr int,
    full_name varchar(255)
);

CREATE TABLE Mentor(
    employee_ID int,
    CONSTRAINT fk_Doctor_employee_ID
    FOREIGN KEY (employee_ID)
        REFERENCES Employee(ID)
);

CREATE TABLE Doctor(
    employee_ID int PRIMARY KEY,
    specialization int,
    roomNr int,
    CONSTRAINT fk_Doctor_employee_ID
    FOREIGN KEY (employee_ID)
        REFERENCES Employee(ID)
);
CREATE TABLE Nurse(
    employee_ID int PRIMARY KEY,
    degree varchar(255),
    CONSTRAINT fk_Nurse_employee_ID
    FOREIGN KEY (employee_ID)
        REFERENCES Employee(ID)
);

CREATE TABLE Patient(
    ID int PRIMARY KEY,
    diagnosises varchar(255),
    age int,
    full_name varchar(255),
);
